@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Sayfası </div>
					</div>
					<div class="card-body">
						
						<form method="post">
							<label> Deneyim Başlığı</label>
							<input type ="text" asp-for="Head" class="form-control" />
							<br /><label> Firma Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label> Tarih Aralığı</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<label> Açıklama</label>
							<textarea rowa="4" class="form-control" asp-for="Desciription"></textarea>
							<br />
							<button class="btn btn primary">Deneyim Ekle</button>
						</form>
						<a href="/Experience/CreateExperience/ class="btn btn-primary">Yeni Deneyim Girişi</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

